<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="si3.ihm.polytech.capsophia.home.HomeFragment">

    <LinearLayout
        style="@style/sectioncontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/title1"
            android:text="@string/highlight" />

        <TextView
            style="@style/subtitle1"
            android:text="@string/sub_highlight" />

        <LinearLayout
            android:id="@+id/highlightList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            style="@style/title1"
            android:text="@string/still_ongoing"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:id="@+id/stillOngoingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>